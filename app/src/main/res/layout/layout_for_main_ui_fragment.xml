<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe8e56a"
    android:weightSum="10">

    <!-- Scores part and Next balls part -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayout0"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <TextView
                android:id="@+id/highestScoreTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:typeface="monospace"
                android:textColor="#ffff2dee"
                android:background="#ff00ff00"
                android:gravity="right|center_vertical"
                android:text="100"
                android:layout_margin="0dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/currentScoreTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:typeface="monospace"
                android:textColor="#ffff2dee"
                android:background="#ff00ff00"
                android:gravity="right|center_vertical"
                android:text="0"
                android:layout_margin="0dp"
                android:padding="5dp"/>
        </LinearLayout>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frameLayout0"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2" >

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/nextBallsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true" />

            <GridLayout
                android:id="@+id/nextBallsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|center_vertical" >
            </GridLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Main part of the game (9 x 9) Grid -->

    <GridLayout
        android:id="@+id/gridCellsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:columnCount="9"
        android:rowCount="9">
    </GridLayout>

    <!-- the undo button and history button -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout_for_buttons_in_mainactivity"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2">

        <Button
            android:id="@+id/undoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="@string/undoStr"
            android:textStyle="bold|italic"
            android:textColor="@android:color/holo_red_dark"
            android:background="@drawable/undo_button"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:text="@string/historyStr"
            android:textStyle="bold|italic"
            android:textColor="@android:color/holo_red_dark"
            android:background="@drawable/history_button"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>