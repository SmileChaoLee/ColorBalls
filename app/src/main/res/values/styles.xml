<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- no Status Bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAllCaps">false</item>

        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:itemBackground">#ffa500</item>
        <item name="android:itemPadding">0dp</item>

    </style>

    <style name="ThemeTextSize30" parent="AppTheme">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="ThemeTextSize50" parent="AppTheme">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="ThemeTextSize30Transparent" parent="ThemeTextSize30">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ThemeTextSize50Transparent" parent="ThemeTextSize30Transparent">
        <item name="android:textSize">50dp</item>
    </style>

    <style name="MyDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
